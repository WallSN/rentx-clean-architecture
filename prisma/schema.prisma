generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Car {
  id           String   @id
  licensePlate String
  available    Boolean

  rentals      Rental[]

  @@map("cars")
}

model Rental {
  id        String   @id
  userId    String
  carId     String
  startDate DateTime
  endDate   DateTime

  car       Car      @relation(fields: [carId], references: [id])

  @@map("rentals")
}